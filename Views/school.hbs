                        <dt class="col-md-12 col-lg-4">{{intermediateCourse.info.boat.desc}}:</dt>
                        <dd class="col-md-12 col-lg-8">{{intermediateCourse.info.boat.value}}</dd>
                        <dt class="col-md-12 col-lg-4">{{intermediateCourse.info.price.desc}}:</dt>
                        <dd class="col-md-12 col-lg-8">{{intermediateCourse.info.price.value}} </dd>
                    </dl>
                    <!--a href="#" class="btn btn-primary">More About</a-->
                    {{#if intermediateCourse.info.extra}}<p class="card-text"><small
                            class="text-muted">{{{intermediateCourse.info.extra}}}</small></p>{{/if}}
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
